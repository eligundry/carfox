<h1>Listing cars</h1>

<table>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Price</th>
    <th>Vin</th>
    <th>Milage</th>
    <th>Used</th>
    <th>Type</th>
    <th>Color</th>
    <th>Transmission</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.make %></td>
    <td><%= car.model %></td>
    <td><%= car.year %></td>
    <td><%= car.price %></td>
    <td><%= car.vin %></td>
    <td><%= car.milage %></td>
    <td><%= car.used %></td>
    <td><%= car.type %></td>
    <td><%= car.color %></td>
    <td><%= car.transmission %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

